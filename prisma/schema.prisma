// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model user{
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId Int @unique
  name String?
  email String @unique
  password String
  avatar String?
}
model room {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String?
  hostId Int
  startTime DateTime
  endTime DateTime
  code String
}
model participant{
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId Int
  callId Int
  micStatus Boolean @default(false)
  cameraStatus Boolean @default(false)
  shareScreen Boolean @default(false)
  raiseHand Boolean @default(false)
}
model message{
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId Int
  callId Int
  content String
  time DateTime @default(now())
}
model whiteboard{
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  callId Int
  title String
  content String
  photo String
}
